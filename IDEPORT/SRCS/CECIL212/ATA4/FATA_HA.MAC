		********
		; macros IDE
		********

		; parametres:
		; 1) time_out 200 hz
		; 2) label erreur
		; (utilise d0)

AtaWaitReady:	MACRO

		move.l	\1,d0
		add.l	$4ba.w,d0
.wr1\@		
		moveq	#$ffffffc0,d1
		and.b	IdeStatus,d1
		bgt.s	.okr1\@
		
		cmp.l	$4ba.w,d0
		bgt.s	.wr1\@
		
		bra	\2
.okr1\@		
		ENDM
		
		********
		
		; parametres:
		; 1) time_out 200 hz
		; 2) label erreur
		; (utilise d0)

AtaWaitFree:	MACRO
	
		move.l	\1,d0
		add.l	$4ba.w,d0
.wf1\@		
		tst.b	IdeStatus
		bpl.s	.okf1\@
		
		cmp.l	$4ba.w,d0
		bgt.s	.wf1\@
		
		bra	\2
.okf1\@		
		ENDM
		
		********
		
		; macro attente de donn‚es
		; on attend DRQ Hi
		
		; parametres:
		; 1) time_out 200 hz
		; 2) label erreur
		; (utilise d0/d1)

AtaWaitDRQ:	MACRO
	
		move.l	\1,d0
		add.l	$4ba.w,d0
.wd1\@		
		btst.b	#3,IdeStatus
		bne.s	.okd1\@
		
		cmp.l	$4ba.w,d0
		bgt.s	.wd1\@
		
		bra	\2
.okd1\@		
		ENDM
		
