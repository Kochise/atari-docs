		********
		
		; macros pour le handshaking
		
		; parametres:
		; 1) delai time out (1/200)
		; 2) label time out
		
		********
		
		; attente de /REQ true

wait_req_1	MACRO

		lea	([$4ba.w],\1.w),a0
		move.w	#NcrBusStatus,(a3)
.lreq1\@
		moveq	#CBSR_REQ,d0
		and.w	(a2),d0
		bne.s	.okreq1\@
		
		cmp.l	$4ba.w,a0
		bgt.s	.lreq1\@
		
		moveq	#1,d0
		bra	\2
.okreq1\@
		ENDM
		
		********

		; attente de /REQ false

wait_req_0	MACRO

		lea	([$4ba.w],\1.w),a0
		move.w	#NcrBusStatus,(a3)
.lreq0\@
		moveq	#CBSR_REQ,d0
		and.w	(a2),d0
		beq.s	.okreq0\@
		
		cmp.l	$4ba.w,a0
		bgt.s	.lreq0\@
		
		moveq	#1,d0
		bra	\2
.okreq0\@
		ENDM
		
		********
