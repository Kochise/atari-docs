CFLAGS	=	-E050 -F050 -K -G+ -ID:\INCLUDE -L032 -M -P -T -W+ -Y
SFLAGS	=	-l2
errtarg	=	error.err
endtarg	=	msgex.prg
gentarg	=	main.o signal.o
deptarg	=	linkfile

.SILENT:
$(endtarg):	$(gentarg) $(bibtarg) $(deptarg)
		$(TLN)	-c=linkfile >> $(errtarg)
main.o:		main.c
		$(CC) $(CFLAGS) main.c >> $(errtarg)
signal.o:	signal.s
		$(AS) signal.s >> $(errtarg)

